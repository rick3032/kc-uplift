apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: iam-app
  finalizers:
  - resources-finalizer.argocd.argoproj.io
spec:
  project: default
  source:
    repoURL: https://github.com/rick3032/kc-uplift.git
    path: charts/apps-iam/
    targetRevision: HEAD
  destination:
    server: https://kubernetes.default.svc
    namespace: kc
  syncPolicy:
    automated:
      selfHeal: true